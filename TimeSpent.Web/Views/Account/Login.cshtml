@model TimeSpent.Web.Models.AccountLoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Time Spent| Login</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="~/Content/AdminLTE/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/AdminLTE/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Content/AdminLTE/plugins/iCheck/square/blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body ng-app="appMain" class="hold-transition login-page">
    <div class="login-box" ng-controller="AccountLoginViewModel" ng_init="returnUrl = '@Model.ReturnUrl' ">
        <br /><br />
        @Html.Partial("~/Views/Shared/_ValidationErrors.cshtml")

        <div class="login-logo">
            <a href="@Url.Content("~")"><b>Time</b>Spent</a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <div class="form-group has-feedback">
                <input type="email" class="form-control" placeholder="Login Email" ng-model="accountModel.LoginEmail">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Password" ng-model="accountModel.Password" ng-keypress="PasswordKeyPress($event)">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox" ng-model="accountModel.RememberMe"> Remember Me
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="button" class="btn btn-primary btn-block btn-flat" ng-click="Login()">Login</button>
                </div>
                <!-- /.col -->
            </div>
            <a href="@Url.Action("Register","Account")" class="text-center">Register a new user</a>
        </div>
    </div>

    <!-- jQuery 2.2.3 -->
    <script src="~/Content/AdminLTE/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Content/AdminLTE/bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Content/AdminLTE/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });

        window.TimeSpent = {};
        (function (ts) {
            var rootPath;
            ts.rootPath = rootPath;
        }(window.TimeSpent));
        TimeSpent.rootPath = '@Url.Content("~")';
    </script>

    <script src="~/Scripts/moment.js" type="text/javascript"></script>
    <script src="~/Scripts/angular.js" type="text/javascript"></script>
    <script src="~/Scripts/angular-route.js" type="text/javascript"></script>
    <script src="~/Scripts/angular-animate.js" type="text/javascript"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <script src="@Url.Content("~/Scripts/App.js")" type="text/javascript"></script>
    <script src="~/Binding/Models/AccountLoginModel.js" type="text/javascript"></script>
    <script src="~/Binding/ViewModels/AccountLoginViewModel.js" type="text/javascript"></script>

</body>
</html>